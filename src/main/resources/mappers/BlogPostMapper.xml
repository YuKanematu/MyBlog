<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.myblog.repository.BlogPostMapper">

    <resultMap id="BlogPostResult" type="com.example.myblog.model.BlogPost">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="author" column="author"/>
    </resultMap>

    <select id="findAll" resultMap="BlogPostResult">
        SELECT * FROM blog_post
    </select>

    <select id="findById" resultMap="BlogPostResult" parameterType="Long">
        SELECT * FROM blog_post WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.example.myblog.model.BlogPost">
        INSERT INTO blog_post (title, content, author)
        VALUES (#{title}, #{content}, #{author})
    </insert>

    <update id="update" parameterType="com.example.myblog.model.BlogPost">
        UPDATE blog_post
        SET title = #{title}, content = #{content}, author = #{author}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="Long">
        DELETE FROM blog_post WHERE id = #{id}
    </delete>

</mapper>

